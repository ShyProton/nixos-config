{palette}: ''
  # Main background, empty for terminal default, need to be empty if you want transparent background
  theme[main_bg]="#${palette.base00}"

  # Main text color
  theme[main_fg]="#${palette.base06}"

  # Title color for boxes
  theme[title]="#${palette.base07}"

  # Higlight color for keyboard shortcuts
  theme[hi_fg]="#${palette.base09}"

  # Background color of selected items
  theme[selected_bg]="#${palette.base01}"

  # Foreground color of selected items
  theme[selected_fg]="#${palette.base0B}"

  # Color of inactive/disabled text
  theme[inactive_fg]="#${palette.base01}"

  # Color of text appearing on top of graphs, i.e uptime and current network graph scaling
  theme[graph_text]="#${palette.base03}"

  # Misc colors for processes box including mini cpu graphs, details memory graph and details status text
  theme[proc_misc]="#${palette.base0B}"

  # Cpu box outline color
  theme[cpu_box]="#${palette.base04}"

  # Memory/disks box outline color
  theme[mem_box]="#${palette.base04}"

  # Net up/down box outline color
  theme[net_box]="#${palette.base04}"

  # Processes box outline color
  theme[proc_box]="#${palette.base04}"

  # Box divider line and small boxes line color
  theme[div_line]="#${palette.base04}"

  # Temperature graph colors
  theme[temp_start]="#${palette.base0C}"
  theme[temp_mid]="#${palette.base0E}"
  theme[temp_end]="#${palette.base0F}"

  # CPU graph colors
  theme[cpu_start]="#${palette.base0A}"
  theme[cpu_mid]="#${palette.base09}"
  theme[cpu_end]="#${palette.base08}"

  # Mem/Disk free meter
  theme[free_start]="#${palette.base0B}"
  theme[free_mid]="#${palette.base0A}"
  theme[free_end]="#${palette.base09}"

  # Mem/Disk cached meter
  theme[cached_start]="#${palette.base0D}"
  theme[cached_mid]="#${palette.base0C}"
  theme[cached_end]="#${palette.base0E}"

  # Mem/Disk available meter
  theme[available_start]="#${palette.base0A}"
  theme[available_mid]="#${palette.base09}"
  theme[available_end]="#${palette.base08}"

  # Mem/Disk used meter
  theme[used_start]="#${palette.base0E}"
  theme[used_mid]="#${palette.base0F}"
  theme[used_end]="#${palette.base08}"

  # Download graph colors
  theme[download_start]="#${palette.base0D}"
  theme[download_mid]="#${palette.base0C}"
  theme[download_end]="#${palette.base0E}"

  # Upload graph colors
  theme[upload_start]="#${palette.base0C}"
  theme[upload_mid]="#${palette.base0E}"
  theme[upload_end]="#${palette.base0F}"
''
